# Cloud Run Environment
CLOUD_RUN=true
PORT=8080
LOG_LEVEL=INFO

# Google Cloud
GCP_PROJECT_ID=pacc-raw-data
GOOGLE_APPLICATION_CREDENTIALS=/var/secrets/google/key.json

# Base.vn API Tokens (from Secret Manager)
BASE_VN_HRM_TOKEN=7383-xxxxx
BASE_VN_PAYROLL_TOKEN=7383-xxxxx
BASE_VN_HIRING_TOKEN=7383-xxxxx
BASE_VN_ACCOUNT_TOKEN=7383-xxxxx
BASE_VN_CHECKIN_TOKEN=7383-xxxxx

# MSSQL Connection
MSSQL_SALE_IP_ADDRESS=your-mssql-server.database.windows.net
MSSQL_SALE_IP_USERNAME=your-username
MSSQL_SALE_IP_PASSWORD=your-password

# WorldFone
WORLDFONE_API_KEY=your-key

# Application Settings
DISABLE_AUTH=false
MAX_RETRIES=3
RETRY_DELAY=5
REQUEST_TIMEOUT=300
BATCH_SIZE=1000

# BigQuery
BQ_PROJECT_ID=pacc-raw-data
BQ_DATASET_ID=pacc_raw_data
